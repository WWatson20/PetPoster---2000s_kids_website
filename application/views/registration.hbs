<body>
    <main>
        <br>
            <div class ="forms" id="register-forms">
                    <form id="form" method="POST" action="/users/register" enctype="application/x-www-form-urlencoded">
                        <div class= "error" id="error">
                        </div>

                        <label for="Username">Enter a username:</label>
                        <input id="Username"  type="text" name="username" onsubmit="return validateForm()" ><br><br>

                        <label for="Email">Enter an email:</label>
                        <input id="Email" type="email" name="email"><br><br>

                        <label for="Password">Enter a password:</label>
                        <input id="Password" type="password" name="password"><br><br>

                        <label for="ConfirmPassword">Confirm a password:</label>
                        <input id="ConfirmPassword" type="password" name="cpassword"><br><br>

                        <label for="ConfirmAge">Confirm you are 13+ years of age:</label>
                        <input id="ConfirmAge" type="checkbox" required><br><br>

                        <label for="TOSandPrivacy">By checking this box you verify that you have read and accept our <a href=""> TOS and Privacy rules</a></label>
                        <input id="TOSandPrivacy" type="checkbox" required><br><br>

                        <label for="register-button" class="custom-file-upload">
                            Register Account
                        </label>
                            <input type="submit" id="register-button"> <br>
                    </form>
                </div>
    </main>
</body>
